@model ArackiralamaProje.Models.Rental

@{
    ViewData["Title"] = "Kiralama Başarılı";
}

<div class="container text-center mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h2><i class="fas fa-check-circle me-2"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h4 class="alert-heading">Kiralama işleminiz başarıyla oluşturuldu!</h4>
                <p>Kiralama numaranız: <strong>@Model.Id</strong></p>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    Kiralama Detayları
                </div>
                <div class="card-body text-start">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Araç:</strong> @Model.Car.CarBrand.Name @Model.Car.Model</p>
                            <p><strong>Plaka:</strong> @Model.Car.PlateNumber</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Kiralama Tarihi:</strong> @Model.RentDate.ToShortDateString()</p>
                            <p><strong>Teslim Tarihi:</strong> @Model.ReturnDate.ToShortDateString()</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <p class="fw-bold">Toplam Ücret: @Model.TotalPrice.ToString("C2")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Cars" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-car"></i> Diğer Araçları Gör
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-home"></i> Anasayfaya Dön
                </a>
            </div>
        </div>
    </div>
</div>