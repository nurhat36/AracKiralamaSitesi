@model ArackiralamaProje.Models.Car

<h2>Araç Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Marka</label>
        <select asp-for="CarBrandId" class="form-control" asp-items="ViewBag.CarBrands"></select>
    </div>
    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Yıl</label>
        <input asp-for="Year" class="form-control" type="number" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Yakıt Tipi</label>
        <select asp-for="FuelTypeId" class="form-control" asp-items="ViewBag.FuelTypes"></select>
    </div>
    <div class="form-group">
        <label>Vites Tipi</label>
        <select asp-for="GearTypeId" class="form-control" asp-items="ViewBag.GearTypes"></select>
    </div>
    <div class="form-group">
        <label>Plaka Numarası</label>
        <input asp-for="PlateNumber" class="form-control" />
        <span asp-validation-for="PlateNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Günlük Kira Ücreti</label>
        <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Araç Fotoğrafı URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <label asp-for="IsAvailable" class="form-check-label">Müsaitlik</label>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
