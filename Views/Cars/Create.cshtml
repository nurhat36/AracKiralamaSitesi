@model ArackiralamaProje.Models.Car

@{
    ViewData["Title"] = "Araç Ekle";
}

<div class="container mt-4">
    <h2>Araç Ekle</h2>
    <hr />

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="CarBrandId" class="form-label">Marka</label>
                    <select asp-for="CarBrandId" class="form-select" asp-items="ViewBag.CarBrands">
                        <option value="">-- Marka Seçin --</option>
                    </select>
                    <span asp-validation-for="CarBrandId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Model" class="form-label">Model</label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Year" class="form-label">Yıl</label>
                    <input asp-for="Year" class="form-control" min="1900" max="@DateTime.Now.Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FuelTypeId" class="form-label">Yakıt Tipi</label>
                    <select asp-for="FuelTypeId" class="form-select" asp-items="ViewBag.FuelTypes">
                        <option value="">-- Yakıt Tipi Seçin --</option>
                    </select>
                    <span asp-validation-for="FuelTypeId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="GearTypeId" class="form-label">Vites Tipi</label>
                    <select asp-for="GearTypeId" class="form-select" asp-items="ViewBag.GearTypes">
                        <option value="">-- Vites Tipi Seçin --</option>
                    </select>
                    <span asp-validation-for="GearTypeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PlateNumber" class="form-label">Plaka Numarası</label>
                    <input asp-for="PlateNumber" class="form-control" />
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PricePerDay" class="form-label">Günlük Kira Ücreti (₺)</label>
                    <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label">Araç Fotoğrafı URL</label>
                    <input asp-for="ImageUrl" class="form-control" type="url" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3 form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
            <label asp-for="IsAvailable" class="form-check-label">Müsait</label>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
