@model IEnumerable<ArackiralamaProje.Models.Car>

@{
    ViewData["Title"] = "Araç Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Araç Listesi</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Yeni Araç Ekle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Fotoğraf</th>
                    <th>Marka/Model</th>
                    <th>Yıl</th>
                    <th>Plaka</th>
                    <th>Yakıt</th>
                    <th>Vites</th>
                    <th>Günlük Ücret</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.Model" class="img-thumbnail" style="width: 100px; height: auto;">
                            }
                            else
                            {
                                <span class="text-muted">Fotoğraf Yok</span>
                            }
                        </td>
                        <td>
                            <strong>@item.CarBrand?.Name</strong><br>
                            @item.Model
                        </td>
                        <td>@item.Year</td>
                        <td>@item.PlateNumber</td>
                        <td>@item.FuelType?.Name</td>
                        <td>@item.GearType?.Name</td>
                        <td>@item.PricePerDay.ToString("C2")</td>
                        <td>
                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-success">Müsait</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Kiralandı</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detaylar">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        .img-thumbnail {
            object-fit: cover;
        }
        .badge {
            font-size: 0.9rem;
            padding: 0.35em 0.65em;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                },
                columnDefs: [
                    { orderable: false, targets: [0, 8] } // Fotoğraf ve İşlemler sütunları sıralanmasın
                ]
            });
        });
    </script>
}